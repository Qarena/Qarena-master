<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/quizDp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:hint="Upload Quiz Pic"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/somepic" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:theme="@style/TextLabel">


                <EditText
                    android:id="@+id/etQid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="QuizId"
                    android:inputType="text"
                    android:textColor="@color/colorIntoTextEdit"
                    android:textSize="12sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/etQname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quiz Title"
                    android:textColor="@color/colorIntoTextEdit"
                    android:textSize="12sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/etQfee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Participation Charges"
                    android:textColor="@color/colorIntoTextEdit"
                    android:textSize="12sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@style/TextLabel"

                >

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="2.3">

                    <EditText
                        android:id="@+id/etAge_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="age from"
                        android:inputType="text"
                        android:textColor="@color/colorIntoTextEdit"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight=".3"
                        android:text="to" />

                    <EditText
                        android:id="@+id/etAge_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="age to"
                        android:inputType="text"
                        android:textColor="@color/colorIntoTextEdit"
                        android:textSize="12sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/etQmaxPart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Maximum Participant Count"
                    android:textColor="@color/colorIntoTextEdit"
                    android:textSize="12sp" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/select_catecgory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/category_arrays"
                    android:prompt="@string/category_prompt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Level"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/select_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/level_arrays"
                    android:prompt="@string/level_prompt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <TextView

                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Mode"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/mode_arrays"
                    android:prompt="@string/mode_prompt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="10">

                <EditText
                    android:id="@+id/etQuiz_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:hint="Address"
                    android:textColor="@color/colorIntoTextEdit"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/quiz_locater"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="3"
                    android:scaleType="centerInside"
                    android:src="@drawable/quiz_list_screen_gps" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <EditText
                    android:id="@+id/etQdate_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:editable="false"
                    android:hint="quiz date"
                    android:inputType="text"
                    android:textColor="@color/colorIntoTextEdit"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etQdate_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:editable="false"
                    android:hint="quiz date"
                    android:inputType="text"
                    android:textColor="@color/colorIntoTextEdit"
                    android:textSize="12sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/etQuiz_descp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="4"
                android:maxLines="4" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp">

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="16dp"
                        android:text="WINNER"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="16dp"
                        android:text="CASH"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="16dp"
                        android:text="XP"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="Prize 1:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etPrize1cash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etPrize1XP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="Prize 2:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etPrize2cash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etPrize2XP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="Prize 3:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etPrize3cash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etPrize3XP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:textSize="16sp" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/submitQuiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Lets Go!"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>