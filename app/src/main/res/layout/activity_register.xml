<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.FitWindowsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/signup_background"
        android:scaleType="fitXY"
        android:fitsSystemWindows="true" />
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_margin="32dp"
        app:cardCornerRadius="12dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:id="@+id/updateDp"
                android:src="@drawable/ic_dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:hint="update profile pic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/colorIntoTextEdit"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User Id"
                    android:textSize="12sp"
                    android:inputType="text"
                    android:id="@+id/etUid"
                    android:textColor="@color/colorIntoTextEdit"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_gravity="center"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter your email/id"
                    android:textSize="12sp"
                    android:inputType="textEmailAddress"
                    android:id="@+id/etEmail"
                    android:textColor="@color/colorIntoTextEdit"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_gravity="center"

                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter your first name"
                    android:textSize="12sp"
                    android:inputType="text"
                    android:id="@+id/etFname"
                    android:textColor="@color/colorIntoTextEdit"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_gravity="center"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter your last name"
                    android:textSize="12sp"
                    android:inputType="text"
                    android:id="@+id/etLname"
                    android:textColor="@color/colorIntoTextEdit"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_gravity="center"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date of Birth"
                    android:textSize="12sp"
                    android:inputType="date"
                    android:id="@+id/etDob"
                    android:textColor="@color/colorIntoTextEdit"/>
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@style/TextLabel"
                android:visibility="gone">

                <EditText
                    android:id="@+id/etCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Country"
                    android:text="India"
                    android:inputType="text"
                    android:textColor="@color/colorIntoTextEdit"
                    android:textSize="12sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/etState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="State"
                    android:inputType="text"
                    android:textColor="@color/colorIntoTextEdit"
                    android:textSize="12sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/etCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:inputType="text"
                    android:textColor="@color/colorIntoTextEdit"
                    android:textSize="12sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_gravity="center">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter your password"
                    android:textSize="12sp"
                    android:inputType="textPassword"
                    android:id="@+id/etPassword"
                    android:textColorHint="@color/colorIntoTextEdit"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_gravity="center">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter password again"
                    android:textSize="12sp"
                    android:inputType="textPassword"
                    android:id="@+id/etCpassword"
                    android:textColorHint="@color/colorIntoTextEdit"/>
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
    </ScrollView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/colorAccent"
        app:contentPaddingLeft="16dp"
        app:contentPaddingRight="16dp"
        app:contentPaddingTop="8dp"
        app:contentPaddingBottom="8dp"
        android:onClick="RegisterActivity">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sign up"
            android:background="@color/colorAccent"
            android:id="@+id/submit"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </android.support.v7.widget.CardView>
</LinearLayout>
</android.support.v7.widget.FitWindowsFrameLayout>